<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/carwash"
            android:id="@+id/textView" android:textSize="25dp" android:linksClickable="false" android:gravity="center"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_gravity="center_horizontal"
            android:text="@string/add"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Название пиццы"
                android:id="@+id/textView100" android:layout_weight="3"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="время занятости"
                android:id="@+id/textView200" android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="курьер"
                android:id="@+id/textView300" android:layout_weight="1"/>
    </LinearLayout>
    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/list">

    </ListView>
</LinearLayout>