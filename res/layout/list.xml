<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/carwash"
            android:id="@+id/textView" android:textSize="25dp" android:linksClickable="false" android:gravity="center"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_gravity="center_horizontal"
            android:text="@string/add"/>
    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/list">

    </ListView>
</LinearLayout>